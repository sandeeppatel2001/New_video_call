<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>Video App</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <style media="screen">
      * {
        background-color: #262430;
        margin: 0;
      }

      #videoDiv {
        /* display: flex; */
        width: 100%;

        /* display: flex; */
        /* justify-content: center; */
        /* display: grid; */
        /* grid-gap: 10px; */
        height: 80%;
        /* position: relative; */
        /* grid-template-columns: repeat(auto-fill, 300px); */
        /* grid-auto-rows: 300px; */
      }

      button {
        height: 30px;
        width: 80px;

        text-align: center;
        border-radius: 10px;
        outline: none;
        border: none;
        text-decoration: none;
        background-color: red;
        cursor: pointer;
      }

      video {
        width: 46%;
        height: 100%;
        margin-left: 2%;
        margin-bottom: 2%;
        margin-top: 2%;
        border-radius: 40px;
        object-fit: cover;
        border: 7px solid white;
        box-shadow: 0 0 7px rgb(212, 202, 236);
        transition: transform 0.5s ease, box-shadow 0.5s ease;
      }
      @media only screen and (max-width: 600px) {
        #videoDiv {
          display: grid !important;
        }
        video {
          width: 95%;
          height: 92%;
          margin: 2% !important;
          /* margin-bottom: 4% !important;
          margin-top: 1% !important;
          margin-bottom: 1% !important; */
          border-radius: 30px;
        }
      }
      .wp {
        width: 25px;
        /* margin-top: 5px; */
      }
      .wpbtn {
        border: none;
        background-color: #262430;
      }
    </style>

    <script
      src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"
      defer
    ></script>

    <script src="socket.io/socket.io.js" defer></script>

    <script src="index.js" charset="utf-8" defer></script>
  </head>

  <body style="display: flex; flex-direction: column">
    <div
      id="head"
      style="
        width: 97.5%;
        border: 5px solid white;
        float: right;
        padding: 10px;
        display: flex;
        justify-content: space-between;
      "
    >
      <h2 style="display: flex; justify-content: center; color: aliceblue">
        Invite New People
      </h2>

      <a
        href="https://twitter.com/share?ref_src=twsrc%5Etfw"
        class="twitter-share-button"
        data-show-count="false"
        >Tweet</a
      >
      <script
        async
        src="https://platform.twitter.com/widgets.js"
        charset="utf-8"
      ></script>
      <!-- <a
        href="https://api.whatsapp.com/send?text=this is ref"data-action="share/whatsapp/share"target="_blank">Share to whatsapp
      </a> -->
      <button
        class="wpbtn"
        title="share to whatsapp"
        onclick="return wbs_click()"
      >
        <!-- onclick="window.open('https:/api.whatsapp.com/send?text=sandeep patel Message or link here')" -->
        <img
          class="wp"
          src="https://www.sharethis.com/wp-content/uploads/2017/05/WhatsApp.png"
          alt=""
        />
      </button>
      <!-- href="https://t.me/share/url?url='Sandeep patel'&text='sandeep'" -->
      <a onclick="return tbs_click()"
        ><i class="fa fa-telegram" style="font-size: 30px; color: red"></i
      ></a>
      <a onclick="return fbs_click()" class="wpbtn" title="share to facebook">
        <img
          style="background-color: aliceblue"
          class="wp"
          src="https://img.icons8.com/material-rounded/96/000000/facebook-f.png"
          alt=""
        />
      </a>
      <a href="2/callendcallend">
        <button style="font-weight: 600">Close Call</button>
      </a>
      <!-- <a
        href="https://www.facebook.com/sharer/sharer.php?u=https://stark1.onrender.com/"
        target="_blank"
      >
        Share on Facebook
      </a> -->
      <!-- <a class="fb-h" onclick="return fbs_click()" target="_blank"> </a> -->
    </div>
    <div id="videoDiv"></div>
    <script type="text/javascript">
      var roomID = "<%= RoomId %>";
      console.log(roomID);
      // const room = document.createElement("h1");
      // room.textContent = roomID;
      // document.getElementById("head").append(room);
      // ----------------------------------------
      var pageLink = window.location.href;
      var pageTitle = String(document.title).replace(/\&/g, "%26");

      function fbs_click() {
        window.open(
          `http://www.facebook.com/sharer.php?u=${pageLink}&quote=${pageTitle}`,
          "sharer",
          "toolbar=0,status=0,width=626,height=436"
        );
        return false;
      }
      function wbs_click() {
        window.open(
          `https://api.whatsapp.com/send?text=${pageLink}&quote=${pageTitle}`,

          "sharer",
          "toolbar=0,status=0,width=626,height=436"
        );
        return false;
      }
      function tbs_click() {
        window.open(
          `https://t.me/share/url?url=${pageLink}&quote=${pageTitle}`,
          "sharer",
          "toolbar=0,status=0,width=626,height=436"
        );
        return false;
      }
    </script>
  </body>
</html>
